<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>0.0.6-alpha</Version>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Authors>Rootwire Ltd</Authors>
    <Description>An API Client Library for SuperOps written in C#/dotnet</Description>
    <Copyright>Copyright (c) Rootwire Ltd 2024</Copyright>
    <RepositoryUrl>https://github.com/RootwireLtd/SuperOpsDotNet.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>Alpha</PackageTags>
    <PackageReleaseNotes>Alpha with minimal functionality.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="StrawberryShake.Server" Version="13.9.0" />
    <None Include="..\..\..\README.md" Pack="true" PackagePath="\"/>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Queries\" />
  </ItemGroup>

</Project>
